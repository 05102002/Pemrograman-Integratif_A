<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Magis.Input.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <style name="Widget.Magis.Input.Filled.Cultured" parent="Widget.Magis.Input.Filled">
        <item name="boxBackgroundColor">@color/cultured</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Widget.Magis.Input.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
    </style>

    <style name="Widget.Magis.Input.Outlined.White.StrokeDarkLiver" parent="Widget.Magis.Input.Outlined">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/dark_liver</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="MyButtonAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="Widget.Magis.Button" parent="Widget.MaterialComponents.Button.TextButton" >
        <item name="android:textSize">16sp</item>
        <item name="shapeAppearanceOverlay">@style/MyButtonAppearance</item>
    </style>

    <style name="Widget.Magis.Button.Filled.OxfordBlue" parent="Widget.Magis.Button">
        <item name="backgroundTint">@color/oxford_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>